{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["vite/client", "node"]
  },
  "include": [
    "src",
    "src-electron",
    "vite.config.*",
    "src/types"
  ],
  "exclude": ["node_modules", "dist", "dist-electron"]
}
